" --- Appearance ---

" Use colors for dark terminal background
set background=dark

" Show line numbers
set number

" Wrap lines
set wrap

" Enable syntax highlighting
syntax enable


" --- Editor ---

" Backspace
set backspace=eol,indent,start

" Indent four spaces
set expandtab
set shiftwidth=4
set tabstop=4


" --- Search ---

" Highlight matches
set hlsearch

" Ignore case when searching
set ignorecase
